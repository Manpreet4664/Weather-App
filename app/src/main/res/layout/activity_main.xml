<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/fontColor"
            android:text="ENTER THE CITY:"/>

        <EditText
            android:id="@+id/cityName"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/findWeather"
            android:layout_marginTop="25dp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="Get Weather"
            android:textSize="20dp"
            android:background="@drawable/round_button"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/outputCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:textSize="30dp"
            android:textColor="@color/fontColor"
            android:gravity="center" />

        <TextView
            android:id="@+id/temperatureDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="50dp"
            android:textColor="@color/fontColor"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/minTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="23dp"
                android:textColor="@color/fontColor"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/maxTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="23dp"
                android:textColor="@color/fontColor"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/mainWeather"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:textSize="25dp"
            android:textColor="@color/fontColor"
            android:gravity="center" />

        <TextView
            android:id="@+id/weatherDescription"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:textColor="@color/fontColor"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/humidityPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/fontColor"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/cloudsPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="@color/fontColor"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/humidityLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="@color/fontColor"
                android:gravity="center" />

            <TextView
                android:id="@+id/cloudsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="@color/fontColor"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>